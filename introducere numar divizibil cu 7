package com.itfactory;

import java.util.Scanner;

public class Main {
    /**
     * 1. Scrieti un program in
     * care, folosind o bucla (? decideti voi care) o sa cititi de la tastatura numere intregi pana la
     * intalnirea unui numar divizibil cu 7
     */
    public static void main(String[] args)
    {

        Scanner scanner = new Scanner(System.in);
        System.out.println("Introduceti un numar: ");
        int x = Integer.parseInt(scanner.nextLine());

       while (x % 7 != 0) {
           System.out.println("Am citit: " + x);
           System.out.print("Introdu numarul: ");
           x = Integer.parseInt(scanner.nextLine());
       }
        System.out.println("S-a introdus numarul divizibil cu 7. Ies din bucla");
    }
}
